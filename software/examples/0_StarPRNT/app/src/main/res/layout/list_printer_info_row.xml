<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listPrinterInfoRow"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/modelNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4285F4"
                android:layout_gravity="start" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/portNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#4285F4"
                    android:layout_gravity="start" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginLeft="1sp"-->
                <!--android:layout_marginStart="1sp"-->
                <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
                <!--android:text="("-->
                <!--android:textColor="#4285F4"-->
                <!--android:layout_gravity="start" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginStart="5sp"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/macAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:textColor="#4285F4"
                    android:layout_gravity="start" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
                <!--android:text=")"-->
                <!--android:textColor="#4285F4"-->
                <!--android:layout_gravity="start" />-->

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/checkedIconImageView"
            android:contentDescription="Checked or Unchecked icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey" />

</LinearLayout>
